<div class="wrapper">
  <div class="container">
    <h1>Products#index</h1>
    <p>Find me in app/views/products/index.html.erb</p>

    <% @products.each  do |product|  %>
      <p> <%= product.product_name %>   <%= link_to "upload my warranty" , new_product_warranty_path(product.id) , class: " btn btn-flat"  %>

        <% if not product.asin.empty? %>
          <%= link_to "buy again on amazon" , "https://www.amazon.fr/dp/#{product.asin}/ref=as_li_ss_tl?ie=UTF8&linkCode=ll1&tag=warrantize04-21&language=fr_FR", class: " btn btn-flat"   %>
        <% end %>

        <% if policy(Product).edit? %>
          <%= link_to "update product", edit_product_path(product.id), class: " btn btn-flat"  %>
        <% end %>

         <%= link_to "view product", product_path(product.id), class: " btn btn-flat"  %>


    </p>
    <% end %>
   <h2>Not seeing yours ? </h2>
   <div><%= link_to "Add it now " , new_product_path , class: " btn btn-flat"  %></div>
  </div>
</div>
